<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            {{name}} -> Coding Ninja Certfied
        </title>

        <link rel="shortcut icon"
            href="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ1mXOeEPOnm11ZNhqhKwzq9qp49mRmv0Lhtw&usqp=CAU"
            type="image/x-icon">

        <link rel="stylesheet" href="./css/user.css" type="text/css">
        <!-- Font Awesome -->
        <link rel="stylesheet"
            href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
        <!-- Google Fonts -->

        <link rel="stylesheet"
            href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
        <!-- Bootstrap core CSS -->

        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css"
            rel="stylesheet">

        <!-- Material Design Bootstrap -->
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css"
            rel="stylesheet">

    </head>
    <style>
        body {
           background-color: #28233a;
           border: 30px solid black;
        }
    </style>
    <body>

        <div class="containerFull1 container-fluid">

            <div class="icon">
                <img src="./image/codingIcon.png" alt="">&nbsp;
                <h3>
                    Organised By Coding Ninja
                </h3>
            </div>
            <div class="title">
                <h2>
                    <span>
                        {{name}}
                    </span>
                    Congratulations üí¶
                </h2>

                <div class="alert alert-{{color}} alert-dismissible fade show"
                    role="alert">
                    <strong>{{message}}</strong>&nbsp;&nbsp;{{image}}
                    <button type="button" class="close" data-dismiss="alert"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>

            {{!-- form --}}
            <!-- Material input -->
            <div class="wrapper">

                <form id="formMain" action="/user_data" method="POST"
                    enctype="multipart/form-data">
                    <div class="md-form">
                        <input type="text" id="name" name="name"
                            class="form-control"
                            required="true">
                        <label for="form1">Enter Your Name Again ‚≠ê </label>
                    </div>

                    <div class="md-form">
                        <input type="text" id="description" name="description"
                            class="form-control">
                        <label for="form1">About Yourself (optüíø)</label>
                    </div>

                    <div class="file-field">
                        <p>
                            Upload Your Image üôÖ‚Äç‚ôÄÔ∏è
                        </p>
                        <a class="btn-floating blue-gradient mt-0">
                            <i class="far fa-heart" aria-hidden="true"></i>
                            <input type="file" name="image" id="files"
                                accept="image/*">
                        </a>
                    </div>

                    <div class="btn_send_div">
                        <button class="btn" type="submit"
                            class="btn_send">
                            Uplod Information &nbsp;
                            <i class="fa fa-arrow-right"></i>
                        </button>
                    </div>
                </form>


                <div class="btn_download" style="display:{{check}}">
                    <button class="btn btn-success btn_download"
                        type="btn" style="margin-left: -2px;">
                        <a href="./image/certificate.png"
                            download="certificate">Download
                            Certificate</a>
                        &nbsp;
                        <i class="fa fa-arrow-right"></i>
                    </button>
                </div>


            </div>

            <div class="total_student">
                <h2>
                    Total Student Registered ‚û° <span>
                        {{length}}
                    </span>
                </h2>
            </div>

            <div class="box">
                <table class="table border-striped table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Image</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each alldData}}

                        <tr>
                            <th scope="row">{{this._id}}</th>
                            <td>{{this.name}}</td>
                            <td>{{this.description}}</td>
                            <td class="image">
                                <img src="./upload/{{this.image}}"
                                    alt="user"
                                    class="user_image">
                            </td>
                        </tr>

                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>

    </body>
    <!-- JQuery -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/js/mdb.min.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.4.0/dist/confetti.browser.min.js"></script>
    {{!-- <script src="./js/client.js" type="text/javascript"></script> --}}
</html>